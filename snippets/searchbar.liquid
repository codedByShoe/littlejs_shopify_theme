
{% comment %} TODO: make search bar work with htmx {% endcomment %}
<div
x-transition:enter="transition ease-out duration-300"
x-transition:enter-start="opacity-0 translate-y-3"
x-transition:enter-end="opacity-100 translate-y-0"
x-transition:leave="transition ease-out duration-300"
x-transition:leave-start="opacity-100 translate-y-0"
x-transition:leave-end="opacity-0 translate-y-3"
  x-cloak x-show="searchBarOpen" x-on:click.outside="searchBarOpen = false" class="w-full z-50 absolute top-0 bg-black/90 border">
  <button type="button" x-on:click="searchBarOpen = false" class="absolute top-0 right-0 mr-5 mt-5 text-white">
    {% render 'icon-close' %}
  </button>
  <div class="h-screen flex justify-center items-center">
    <form action="{{ routes.search_url }}" method="GET" class="flex-auto">
      <div class="flex items-center justify-between text-white px-4 max-w-5xl pb-4 mx-auto border-b-2 border-b-white">
        <input 
           type="search" 
           name="q" 
           placeholder="Search..." 
           class="w-full bg-transparent h-10 pr-10 px-5 text-3xl focus:outline-none" />
        <button type="submit" class=" text-gray-900 rounded-full bg-gray-100 p-3 mr-2 md:mr-12">
          {% render 'icon-search' %}
        </button>
      </div>
    </form>
    <div id="search-results"></div>
  </div>
</div>
