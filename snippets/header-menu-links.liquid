{% for link in links %}
        {% if link.links != blank %}
          <li class="">
            <button
              id="dropdown_{{ forloop.index }}"
              @click="dropdown_{{ forloop.index }} = !dropdown_{{ forloop.index }}"
              class="inline-flex items-center">
              {{ link.title }}
              {% render 'icon-dropdown' %}
            </button>
            <!-- Dropdown Sub links -->
            {% for childlink in link.links %}
              <ul v-show="dropdown_3" v-cloak class="menu absolute bg-base-100 top-10 z-20">
                <li>
                  <a href="{{ childlink.url }}" class="">
                    {{ childlink.title }}
                  </a>
                </li>
              </ul>
            {% endfor %}
          </li>
        {% else %}
          <li class="">
            <a href="{{ link.url }}" class="text-base text-gray-500 hover:text-gray-700">{{ link.title }}</a>
          </li>
        {% endif %}
      {% endfor %}