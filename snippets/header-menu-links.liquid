{% for link in links %}
        {% if link.links != blank %}
          <li class="">
            <button
              id="menu-btn-{{ forloop.index }}"
              class="inline-flex items-center">
              {{ link.title }}
              {% render 'icon-dropdown' %}
            </button>
            <!-- Dropdown Sub links -->
            {% for childlink in link.links %}
              <ul id="child-dropdown-{{ forloop.index }}" class="hidden bg-white top-10 z-20">
                <li>
                  <a href="{{ childlink.url }}" class="text-base text-gray-500 hover:text-gray-700">
                    {{ childlink.title }}
                  </a>
                </li>
              </ul>
            {% endfor %}
          </li>
        {% else %}
          <li class="">
            <a href="{{ link.url }}" class="text-base text-gray-500 hover:text-gray-700">{{ link.title }}</a>
          </li>
        {% endif %}
      {% endfor %}